@model AnswerCube.UI.MVC.Controllers.DTO_s.ContactInfoDto
@inject IUrlHelper Url

@{
    ViewBag.Title = "Contact Info";
    Layout = "_Layout";
}

<h2>Contact Info</h2>
<form method="post" asp-action="PostContactInfo">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" asp-for="Name" id="name" name="Name" class="form-control" required/>
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" asp-for="Email" id="email" name="Email" class="form-control" required/>
        @if (TempData["Error"] != null)
        {
        <div class="text-danger col-6 fw-bold">@TempData["Error"]</div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <script type="text/javascript" src="~/lib/davidshimjs-qrcodejs-04f46c6/qrcode.js"></script>
    <script type="text/javascript" src="~/dist/qr.entry.js"></script>
}