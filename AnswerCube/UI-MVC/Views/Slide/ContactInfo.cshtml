@model AnswerCube.UI.MVC.Controllers.DTO_s.ContactInfoDto

@{
    ViewBag.Title = "Contact Info";
    Layout = "_Layout";
}

<h2>Contact Info</h2>

<form method="post" asp-action="PostContactInfo" >
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" asp-for="Name" id="name" name="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" asp-for="Email" id="email" name="Email" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>