@model Domain.Slide

@{
    ViewBag.Title = "Slide details";
    Layout = "_Layout";
}

<h2>title</h2>
<div class="container mt-5">
    <div class="card ">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="mb-4">SlideList Details</h1>
                </div>
                <div style="height: 400px; overflow-y: scroll;">
                    <h6 class="mt-4">Slides</h6>
                    <div class="mt-3">
                        @if (Model.ConnectedSlideLists != null && Model.ConnectedSlideLists.Count == 0)
                        {
                            <div class="flow-button">No Slides</div>
                        }
                        else if (Model.ConnectedSlideLists != null)
                        {
                            @foreach (var slide in Model.ConnectedSlideLists)
                            {
                                <div class="flow-button subtheme-rectangle">
                                    @if (slide.Slide != null) // Controleer of Slide niet null is voordat je probeert de tekst op te halen
                                    {
                                        <a asp-action="SlidesDetails" asp-controller="Slides" asp-route-slideId="@Model.Id" style="color: white; font-weight: bold; text-decoration: none;">@slide.Slide.Text</a>
                                    }
                                    else
                                    {
                                        <span style="color: red;">slide niet correct opgehaald </span>
                                    }
                                </div>
                            }
                        }
                        else
                        {
                            <p>Error: No slides ;)</p>
                        }
                    </div>
                </div>
                        </div>
                    </div>
                </div>
            </div>
