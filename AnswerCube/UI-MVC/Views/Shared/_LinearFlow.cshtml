@model SlideCompositeModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AnswerCube</title>
    <script src="~/dist/site.entry.js" defer></script>
    <script src="~/dist/linearflow.entry.js" defer></script>
    @RenderSection("Scripts", required: false)
    <link rel="stylesheet" href="~/dist/site.css">
</head>
<body>
<header>
</header>


<div class="container">
    <main role="main" class="pb-3">
        <div class="container mt-5">
            <div class="slide-container border p-4 rounded position-relative">
                <div class=" subtheme-container d-flex justify-content-center align-items-center bg-light p-3 mb-3 w-100">
                    <span class="font-weight-bold h3 mb-0">Subtheme - @Model.CircularFlowModel.SubTheme.Name</span>
                </div>
                <!-- comment -->
                <a href="@Url.Action("Subthemes", "CircularFlow")" id="changeSubtheme" class="btn btn-primary font-weight-bold position-absolute">
                    Change Subtheme
                </a>
                @RenderBody()
            </div>
        </div>
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - UI_MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
</body>
</html>




