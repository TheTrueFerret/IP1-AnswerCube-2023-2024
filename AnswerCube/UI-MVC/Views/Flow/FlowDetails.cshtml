@model Domain.Flow

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="container mt-5">
    <h1 class="mb-4">Flow Details</h1>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            @if (Model.CircularFlow)
            {
                <p class="card-text">This is a circular flow</p>
            }
            else
            {
                <p class="card-text">This is a linear flow</p>
            }
            @if (Model.Project != null)
            {
            }
            <p class="card-text">
                <strong>Project:</strong> @Model.Project.Title
            </p>
            <a href="@Url.Action("EditFlowView", "Flow", new { flowId = Model.Id,projectId = Model.Project.Id })" class="btn btn-primary">Edit Flow</a>
            @*//TODO: Flow needs create SlideList btn where Slides are shown and created*@
            <a href="@Url.Action("CreateSlideView", "Flow", new { projectId = Model.Project.Id })" class="btn btn-primary">Add Slide</a>
        </div>
    </div>
</div>