@using Domain
@model Domain.Flow

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    var slideLists = ViewBag.SlideLists as List<SlideList>;
}

<div class="container mt-5">
    <div class="card card-flowdetails">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="mb-4">Flow Details</h1>
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Description</p>
                    @if (Model.CircularFlow)
                    {
                        <p class="card-text flowType">This is a circular flow</p>
                    }
                    else
                    {
                        <p class="card-text flowType">This is a linear flow</p>
                    }
                    @if (Model.Project != null)
                    {
                        <p class="card-text">
                            <strong>Project:</strong> @Model.Project.Title
                        </p>
                    }
                    <a href="@Url.Action("EditFlowView", "Flow", new { flowId = Model.Id, projectId = Model.Project.Id })" class="btn btn-primary">Edit Flow</a>
                </div>
                <div class="col-md-6">
                    <div class="card card-right">
                        <div class="card-body">
                            <div style="height: 400px; overflow-y: scroll;">
                                <h6 class="mt-4">Subthema's</h6>
                                <div class="mt-3">
                                    
                                    @if (slideLists != null && !slideLists.Any())
                                    {
                                        <div class="flow-button">No Slide-list</div>
                                    }
                                    else if (slideLists != null)
                                    {
                                        @foreach (var slideList in slideLists)
                                        {
                                            <div class="flow-button subtheme-rectangle">
                                                <a asp-action="SlideListDetails" asp-controller="SlideList" asp-route-slideListId="@slideList.Id" style="color: white; font-weight: bold; text-decoration: none;">@slideList.Title</a>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <p>Error: SlideList is null</p>
                                    }
                                </div>
                                <div class="subtheme-rectangle">
                                    <a href="@Url.Action("CreateSlideListView", "Flow", new { flowId = Model.Id }) " style="color: white; font-weight: bold; text-decoration: none;">Add Subtheme</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-flowdetails {
        border: 3px solid #ccc;
        border-radius: 8px;
    }

  
    .subtheme-rectangle {
        width: calc(100% - 20px);
        height: 50px;
        background-color: #1a5276; 
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px; 
        font-size: 18px;
        border-radius: 6px;
        font-weight: bold;
         text-decoration: none;
    }

    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-thumb {
        background-color: #888;
        border-radius: 4px;
    }

    ::-webkit-scrollbar-track {
        background-color: #f1f1f1;
    }
    
    .flowType {
        font-weight: bold;
        font-style: italic;
    }
</style>

