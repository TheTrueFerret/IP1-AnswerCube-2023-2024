@using Domain
@model Domain.SlideList

@{
    ViewBag.Title = "Create SlideList";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-5 fst-italic">Create Subtheme</h2>
            <form id="slideListForm" method="post" asp-action="AddSlideListToFlow" asp-controller="Flow">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <div class="form-group mb-4">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" class="form-control" required>
                </div>
                <div class="form-group mb-4">
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description" class="form-control" required>
                </div>
                <input type="hidden" id="flowId" name="flowId" value="@ViewBag.FlowId">
                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-success btn-save-changes">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>