@using Domain
@model Domain.SlideList

@{
    ViewBag.Title = "Create SlideList";
    Layout = "_Layout";
}

<div class="container">
    <h2>Create SlideList</h2>
    <form id="slideListForm" method="post" asp-action="AddSlideListToFlow" asp-controller="Flow">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <input type="text" id="description" name="description" class="form-control" required>
        </div>
        <input type="hidden" id="flowId" name="flowId" value="@ViewBag.FlowId">
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>