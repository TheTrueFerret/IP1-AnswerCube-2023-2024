@model AnswerCube.BL.Domain.Project.Project

@{
    ViewBag.Title = "New Flow";
    Layout = "_Layout";
}

<style>
    .form-label {
        font-weight: bold;
    }
    
    .form-group {
            margin-bottom: 30px; /* Vergroot de afstand tussen de div-elementen */
        }
        
        .form-label {
            padding-bottom: 5px; /* Maak de labels dichterbij verticaal gezien bij de inputvelden */
            font-weight: bold;
        }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="font-weight-bold text-center mb-4" >New flow</h2>
            <form method="post" asp-action="AddFlow" asp-controller="Flow">
                <div class="form-group">
                    <label for="name" class="form-label font-weight-bold">Name</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Name" required />
                </div>
                <div class="form-group">
                    <label for="description" class="form-label font-weight-bold">Description</label>
                    <textarea id="description" name="desc" class="form-control" placeholder="Description" rows="4"></textarea>
                </div>
                <div class="form-group">
                    <label class="form-label font-weight-bold">Flow Type</label>
                    <div class="form-check">
                        <input type="radio" id="circularFlow" name="flowType" value="circular" class="form-check-input" checked />
                        <label for="circularFlow" class="form-check-label">Circular Flow</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" id="linearFlow" name="flowType" value="linear" class="form-check-input" />
                        <label for="linearFlow" class="form-check-label">Linear Flow</label>
                    </div>
                </div>
                <input type="number" for="projectId" name="projectId" hidden value="@Model.Id">
                <div class="text-center">
                    <a href="@Url.Action("Flows", "Project",new {projectId = Model.Id})" class="btn btn-danger btn-lg ml-2">Cancel</a>
                    <button type="submit" class="btn btn-success btn-lg mr-2">Create Flow</button>
                </div>
            </form>
        </div>
    </div>
</div>