@model Domain.Organization

@{
    ViewBag.Title = "New Project";
    Layout = "_Layout";
}


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="font-weight-bold text-center mb-4">New Project</h2>
            <form method="post" action="@Url.Action("CreateProject", "Project", new { organizationId = Model.Id })">
                <div class="form-group mb-4">
                    <label for="title" class="fw-bold">Title:</label>
                    <input type="text" id="title" name="title" class="form-control" placeholder="Project Title" required/>
                </div>
                <div class="form-group mb-4">
                    <label for="description" class="fw-bold">Description:</label>
                    <textarea id="description" name="description" class="form-control" placeholder="Project Description" required></textarea>
                </div>
                <div class="form-group mb-4">
                    <label class="form-checkbox-label" for="isActive" class="fw-bold">
                        <input type="checkbox" id="isActive" name="isActive" checked/>
                        IsActive
                    </label>
                </div>
                <div class="text-center">
                    <a href="@Url.Action("OrganizationView", "Organization", new { organizationId = Model.Id })"  class="btn btn-danger btn-lg ml-2">Cancel</a>
                    <button type="submit" class="btn btn-success btn-lg mr-2 form-submit">Create Project</button>
                </div>
            </form>
        </div>
    </div>
</div>