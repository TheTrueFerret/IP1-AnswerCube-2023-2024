@using Domain
@model AnswerCube.BL.Domain.Project.Project

@{
    ViewBag.Title = "Flow overzicht";
    Layout = "_Layout";
}

<style>
    .flow-item a,
    .create-new-flow-link {
        font-weight: bold;
        font-size: 22px;
        color: black;
        text-decoration: none;
    }
    
    .flow-card {
    }
</style>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card flow-card">
                <div class="card-header bg-dark text-white text-center">
                    <h4 class="font-weight-bold">FLOWS</h4>
                </div>
                <div class="card-body">
                    @if (Model.Flows.Count == 0)
                    {
                        <p class="card-text">No Flows</p>
                    }
                    else
                    {
                        @foreach (var flow in Model.Flows)
                        {
                            <div class="flow-item mb-3 bg-light">
                                <a asp-action="FlowDetails" asp-controller="Flow" asp-route-flowId="@flow.Id">@flow.Name</a>
                            </div>
                        }
                    }
                </div>
                <div class="card-footer bg-success">
                    <a asp-action="NewFlowView" asp-controller="Project" asp-route-projectId="@Model.Id" class="create-new-flow-link text-white d-block text-center"> 
                        Create New Flow
                        <i class="fas fa-plus mt-2"></i> <!-- Plusicoontje toegevoegd -->
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-dark text-white text-center">
                    <h4 class="font-weight-bold">ACTIVE INSTALLATIONS</h4>
                </div>
                <div class="card-body">
                    <!-- Placeholder for active installations -->
                    <p class="card-text">Active Installations Placeholder</p>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-4">
        @if (Model.Organization != null)
        {
            <a href="@Url.Action("Index", "Organization", new { organizationid = Model.Organization.Id })" class="btn btn-dark text-white">
                Back
            </a>
        }
        else
        {
            <p class="text-danger">Organization details are not available.</p>
        }
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/9ecbe616c3.js" crossorigin="anonymous"></script>
}