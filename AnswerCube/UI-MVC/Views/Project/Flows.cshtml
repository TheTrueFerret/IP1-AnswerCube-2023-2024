@model List<AnswerCube.BL.Domain.Project.Project>

@{
    ViewBag.Title = "Flow overzicht";
    Layout = "_Layout"; 
}

<div id="flowPageContent"> 
    <style>
        #flowPageContent .container {
            display: flex;
            flex-direction: row;
        }
        
        #flowPageContent #forumData {
            margin: 10px;
        }

        #flowPageContent .column {
            flex: 1;
            padding: 10px;
        }

        #flowPageContent .box {
            background-color: #ccc;
            padding: 10px;
            margin-bottom: 10px;
        }

        #flowPageContent .box-title {
            color: white;
            background-color: #555;
            margin: 5px;
            padding: 5px;
            font-size: 20px; 
        }

        #flowPageContent .flow-button {
            background-color: #fff;
            margin: 5px;
            padding: 5px;
            cursor: pointer;
            font-size: 20px; 
        }
        
        #flowPageContent .flow-button:hover {
            background-color: lightcyan;
        }

        #flowPageContent .active {
            background-color: white;
        }

        #flowPageContent .overflow-container {
            max-height: calc(50vh - 40px);
            overflow-y: auto;
        }

        #flowPageContent .new-flow-button {
            text-align: center;
            background-color: #fff;
            margin: 5px;
            padding: 10px;
            font-weight: bold; 
            font-size: 20px; 
        }
        
        #flowPageContent .new-flow-button span {
            display: block; /*   + teken op nieuwwe regel */
        }

        #flowPageContent .new-flow-button:hover {
            background-color: lightcyan;
        }
        
        #flowPageContent .installations-container .flow-button:hover {
            background-color: white;
        }
    </style>

    <div class="container">
        <div class="column">
            <div class="box">
                <div class="box-title">Flows</div>
                @for (int i = 1; i <= 6; i++)
                {
                    <div class="flow-button" onclick="showInstallations('@("Flow " + i)')">
                        Flow @i
                    </div>
                }
                <div class="new-flow-button" onclick="location.href='@Url.Action("NewFlow", "Project")'" >
                    New Flow <span>&#43;</span>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="box">
                <div class="box-title">Active Installations</div>
                <div class="overflow-container installations-container" id="activeInstallations"></div>
            </div>
            <div class="box">
                <div class="box-title">Forum</div>
                <div class="overflow-container" id="forumData"></div>
            </div>
        </div>
    </div>

    <script>
        function showInstallations(flowName) {
            var installations = {
                "Flow 1": ["Installation 100", "Installation 300", "Installation 700"],
                "Flow 2": ["Installation 200", "Installation 400", "Installation 800"],
                // ..
            };

            var activeInstallations = installations[flowName];
            var activeInstallationsHtml = "";

            activeInstallations.forEach(function (installation) {
                activeInstallationsHtml += "<div class='flow-button'>" + installation + "</div>";
            });

            document.getElementById("activeInstallations").innerHTML = activeInstallationsHtml;

            var forumData = {
                "Flow 1": {
                    ideas: 50,
                    reactions: 60,
                    users: 150
                },
                "Flow 2": {
                    ideas: 70,
                    reactions: 80,
                    users: 200
                },
                // ..
            };

            var forumDataHtml = "<div>Total Ideas: " + forumData[flowName].ideas + "</div>" +
                                "<div>Total Reactions: " + forumData[flowName].reactions + "</div>" +
                                "<div>Total Users: " + forumData[flowName].users + "</div>";

            document.getElementById("forumData").innerHTML = forumDataHtml;

            // Highlight
            var flowButtons = document.querySelectorAll(".flow-button");
            flowButtons.forEach(function (button) {
                if (button.textContent === flowName) {
                    button.classList.add("active");
                } else {
                    button.classList.remove("active");
                }
            });
        }

        function createNewFlow() {
            alert("New Flow Created!");
        }
    </script>
</div>
