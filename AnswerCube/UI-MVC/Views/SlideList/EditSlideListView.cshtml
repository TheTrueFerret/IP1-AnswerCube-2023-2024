@using Domain
@using AnswerCube.BL.Domain
@model Domain.SlideList

@{
    ViewBag.Title = "Edit SlideList";
    Layout = "_Layout";
}

<div class="container py-4 text-center bg-light">
    <h2 class="subtheme">Subtheme: <span class="title fst-italic">@Model.Title</span></h2>
    <div class="mt-4 d-flex justify-content-center">
        <form id="slideListForm" method="post" asp-action="EditSlideList" asp-controller="SlideList" class="w-50">
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" name="slideListId" value="@Model.Id"/>

            <div class="form-group text-start">
                <label asp-for="Title" class="form-label">Edit Name</label>
                <input asp-for="Title" class="form-control mx-auto" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mt-4 text-start">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" name="description" class="form-control mx-auto"></textarea>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-success btn-save-changes">Save Changes</button>
            </div>
        </form>
    </div>
</div>