@model Domain.SlideList

@{
    ViewBag.Title = "SlideList Details";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="card ">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="mb-4">SlideList Details</h1>
                    <h5 class="card-title"> Titel: @Model.Title</h5>

                    @*      <a href="@Url.Action("EditFlowView", "Flow", new { flowId = Model.Id,projectId = Model.Project.Id })" class="btn btn-primary">Edit Flow</a>
                    <a href="@Url.Action("CreateSlideView", "Flow", new { projectId = Model.Project.Id })" class="btn btn-primary">Add Slide</a> *@

                </div>
                <div class="col-md-6">
                    <h4 class="mt-4">Slides</h4>
                    <div class="card card-right">
                        <div style="height: 400px; overflow-y: scroll;">
                            <div class="mt-3">
                                @if (Model.ConnectedSlides != null && Model.ConnectedSlides.Count == 0)
                                {
                                    <div class="flow-button">No Slides</div>
                                }
                                else if (Model.ConnectedSlides != null)
                                {
                                    @foreach (var slide in Model.ConnectedSlides)
                                    {
                                        <div class="flow-button subtheme-rectangle">
                                            @if (slide.Slide != null)
                                            {
                                                <div class="card mt-3">
                                                    <div class="card-body">
                                                        <h4 class="card-title">SlideType: @slide.Slide.SlideType</h4> <!-- Slide type -->
                                                        <h5 class="card-text">@slide.Slide.Text</h5> <!-- Slide title -->
                                                        @if (slide.Slide.AnswerList != null && slide.Slide.AnswerList.Count > 0)
                                                        {
                                                            <button class="btn btn-primary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#answers-@slide.Slide.Id" aria-expanded="false" aria-controls="answers-@slide.Slide.Id">
                                                                Show/Hide Answers
                                                            </button>
                                                            <div class="collapse" id="answers-@slide.Slide.Id">
                                                                <ul class="list-group mt-3">
                                                                    @foreach (var answer in slide.Slide.AnswerList)
                                                                    {
                                                                        <li class="list-group-item">@answer</li>
                                                                    }
                                                                </ul>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-danger">Error: Slide object is null</span>
                                            }
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p>Error: No slides ;)</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>