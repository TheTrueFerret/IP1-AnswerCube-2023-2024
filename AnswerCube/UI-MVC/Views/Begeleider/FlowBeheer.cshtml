@model NoteModel

@{
    ViewBag.Title = "Flow Management";
    Layout = "_Layout";
}

<h2>Flow Management</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Notes</h3>
            <form asp-controller="Begeleider" asp-action="AddNote" method="post" class="form-group">
                <input type="hidden" asp-for="InstallationId" value="@Model.InstallationId" class="form-control"/>
                <div class="mb-3">
                    <label asp-for="Note" class="form-label"></label>
                    <textarea asp-for="Note" class="form-control" id="note" placeholder="Enter your note here"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add Note</button>
            </form>
        </div>
        <div class="col-md-3">
            <h3>Flow Control</h3>
            <form asp-controller="Begeleider" asp-action="StartFlow" method="post">
                <input type="hidden" asp-for="InstallationId" value="@Model.InstallationId" class="form-control"/>
                <button type="submit" class="btn btn-success mb-1">
                    <h5>Start Flow</h5>
                </button>
            </form>
            <form asp-controller="Begeleider" asp-action="StopFlow" method="post">
                <input type="hidden" asp-for="InstallationId" value="@Model.InstallationId" class="form-control"/>
                <button type="submit" class="btn btn-danger mb-1">
                    <h5>Stop Flow</h5>
                </button>
            </form>
        </div>
        <div class="col-md-3">
            <h3>Flow Status</h3>
            <form asp-controller="Begeleider" asp-action="DeactivateInstallation" method="post">
                <input type="hidden" asp-for="InstallationId" value="@Model.InstallationId" class="form-control"/>
                <button type="submit" class="btn btn-primary mb-1">
                <h5>Deactivate installation</h5>
                </button>
            </form>
        </div>
    </div>
</div>