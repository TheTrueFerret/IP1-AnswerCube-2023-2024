@using AnswerCube.BL.Domain.User
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AnswerCubeUser> SignInManager
@inject UserManager<AnswerCubeUser> UserManager
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_HomePageLayout.cshtml";
}
<div class="homeBody">
    <div class="container">
        <div class="row align-content-center justify-content-between">
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="col-md-4 tile d-flex align-items-center justify-content-center">
                    <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                </div>
                <div class="col-md-4 tile">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </div>
                <div class="col-md-4 tile">
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
                    </form>
                </div>
            }
            else
            {
                <div class="col-md-4 tile">
                    <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </div>
                <div class="col-md-4 tile">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </div>
                <div class="col-md-4 tile">
                    <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </div>
            }
        </div>
        <div class="row align-content-center justify-content-evenly">
            @if (User.IsInRole("Admin") || User.IsInRole("DeelplatformBeheerder"))
            {
                <div class="col-md-4 tile">
                    <a asp-area="" asp-controller="Organization" asp-action="Index">Deelplatform</a>
                </div>
            }
            <div class="col-md-4" style="width: 120px">
                <div class="cube-container" style="width: 120px;height: 120px">
                    <div class="scene">
                        <div class="cube">
                            <div class="face front">AnswerCube</div>
                            <div class="face back">AnswerCube</div>
                            <div class="grid-face left">
                                <div class="grid-item empty-div"></div>
                                <div class="grid-item icon-div">
                                    <i class="fas fa-arrow-up"></i>
                                </div>
                                <div class="grid-item empty-div"></div>
                                <div class="grid-item select-div">Select</div>
                                <div class="grid-item empty-div"></div>
                                <div class="grid-item ok-div">Ok</div>
                                <div class="grid-item empty-div"></div>
                                <div class="grid-item icon-div">
                                    <i class="fas fa-arrow-down"></i>
                                </div>
                                <div class="grid-item empty-div"></div>
                            </div>
                            <div class="grid-face right">
                                <div class="grid-item empty-div"></div>
                                <div class="grid-item icon-div">
                                    <i class="fas fa-arrow-up"></i>
                                </div>
                                <div class="grid-item empty-div"></div>
                                <div class="grid-item select-div">Select</div>
                                <div class="grid-item empty-div"></div>
                                <div class="grid-item ok-div">Ok</div>
                                <div class="grid-item empty-div"></div>
                                <div class="grid-item icon-div">
                                    <i class="fas fa-arrow-down"></i>
                                </div>
                                <div class="grid-item empty-div"></div>
                            </div>
                            <div class="face top">
                                <img src="~/Images/AnswerCubeLogoNoBackground.png" alt="Answercube logo"/>
                            </div>
                            <div class="face bottom"></div>
                        </div>
                    </div>
                </div>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="col-md-4 tile">
                    <a asp-area="" asp-controller="Admin" asp-action="DeelplatformOverview">Deelplatform Overview</a>
                </div>
            }
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="row align-content-center justify-content-between">
                <div class="col-md-4 tile">

                </div>
                <div class="col-md-4 tile">
                    <a asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                </div>
                <div class="col-md-4 tile">
                    <a asp-area="" asp-controller="Forums" asp-action="Index">Forums</a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts
{
    <script src="~/dist/index.entry.js" defer></script>
    <script src="https://kit.fontawesome.com/9ecbe616c3.js" crossorigin="anonymous"></script>
}