@{
    Layout = "_GeneralLayout";
}

@section Scripts
{
    <script src="~/dist/initializeinstallation.entry.js" defer></script>
}

<div id="mainDiv" class="container">
    <h1 class="mt-5">Choose An Active Installation</h1>
    <form class="mt-3">
        <div class="form-group">
            <label for="inactiveInstallations">Select an Inactive Installation</label>
            <select class="form-control form-select-lg" id="inactiveInstallations" name="inactiveInstallations">
                <option value="installation1">Gemeentehuis Antwerpen</option>
                <option value="installation2">BIB Aartselaar</option>
            </select>
        </div>
    </form>
    <button id="createInstallationButton" class="btn btn-secondary mt-3">Create new Installation</button><br/>
    <button id="Confirm" class="btn btn-primary mt-3">Confirm</button>
</div>

<!-- Create Installation Modal -->
<div class="modal fade" id="createInstallationModal" tabindex="-1" role="dialog" aria-labelledby="createInstallationModalLabel" aria-hidden="true">
    
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createInstallationModalLabel">Create New Installation</h5>
            </div>
            <div class="modal-body">
                <form id="newInstallationForm">
                    <!-- Add installation form fields here -->
                    <div class="form-group">
                        <label for="installationName">Installation Name</label>
                        <input type="text" class="form-control" id="installationName" name="installationName">
                    </div>
                    <div class="form-group">
                        <label for="installationLocation">Installation Location</label>
                        <input type="text" class="form-control" id="installationLocation" name="installationLocation">
                    </div>
                    <!-- Add other installation fields here -->
                </form>
            </div>
            <div class="modal-footer">
                <button id="closeInstallationModal" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="saveInstallationButton" type="button" class="btn btn-primary">Save Installation</button>
            </div>
        </div>
    </div>
</div>

